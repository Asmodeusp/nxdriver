<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingRight="@dimen/px40dp"
    android:paddingLeft="@dimen/px40dp"
    android:paddingBottom="@dimen/px40dp"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="@dimen/px2dp"
    android:background="@drawable/ico_setment"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="@dimen/px80dp"
        android:id="@+id/rladd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/img"
            android:src="@drawable/ico_addsetment"
            android:layout_width="@dimen/px24dp"
            android:layout_height="@dimen/px24dp">

        </ImageView>
        <TextView
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_toRightOf="@+id/img"
            android:layout_centerInParent="true"
            android:textSize="@dimen/px30dp"
            android:textColor="@color/color_black"
            android:text="添加结算单"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
       android:layout_marginBottom="@dimen/px80dp"
        android:layout_marginTop="@dimen/px40dp"
        android:id="@+id/rlquery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/img1"
            android:src="@drawable/ico_querysetment"
            android:layout_width="@dimen/px24dp"
            android:layout_height="@dimen/px24dp">

        </ImageView>
        <TextView
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_toRightOf="@+id/img1"
            android:layout_centerInParent="true"
            android:textSize="@dimen/px30dp"
            android:textColor="@color/color_black"
            android:text="查询结算单"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</LinearLayout>