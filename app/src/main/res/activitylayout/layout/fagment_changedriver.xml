<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:background="@color/bg"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/common_toolbar"></include>
        <RelativeLayout
            android:id="@+id/rl_mydriver"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp">
            <TextView
                android:layout_marginLeft="@dimen/px20dp"
                android:textSize="@dimen/px28dp"
                android:layout_centerVertical="true"
                android:textColor="@color/color_black"
                android:text="替换司机"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/px26dp"
                    android:textColor="@color/gray888"
                    android:id="@+id/tvdriverNo"
                    android:hint="请选择"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginRight="@dimen/px20dp"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:src="@drawable/ico_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </RelativeLayout>


        <EditText
            android:layout_marginTop="@dimen/px20dp"
            android:id="@+id/edreason"
            android:layout_weight="1"
            android:padding="@dimen/px24dp"
            android:gravity="left"
            android:textColor="@color/color_black"
            android:textSize="@dimen/px30dp"
            android:hint="输入替换理由"
            android:background="@color/white"
            android:minHeight="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>
    </LinearLayout>


    <TextView
        android:layout_marginLeft="@dimen/px24dp"
        android:layout_marginRight="@dimen/px24dp"
        android:layout_marginTop="@dimen/px100dp"
        android:layout_below="@+id/ll"
        android:id="@+id/tvOrder"
        android:textSize="@dimen/px30dp"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white"
        android:background="@drawable/loading_btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp">

    </TextView>

</RelativeLayout>