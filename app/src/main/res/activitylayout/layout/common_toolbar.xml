<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toolbar="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/bg"
        android:visibility="visible"
        toolbar:titleTextColor="@color/color_black"
        toolbar:theme="@style/ToolbarTheme"
        >
        <TextView
            android:singleLine="true"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="我找车"
            android:textColor="@color/color_black"
            android:textSize="18sp" />
        <TextView
            android:paddingRight="@dimen/px20dp"
            android:gravity="center"
            android:id="@+id/right_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px60dp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/px8dp"
            android:minWidth="@dimen/px120dp"
            android:padding="@dimen/px6dp"
            android:text="确定"
            android:textColor="@color/color_black"
            android:textSize="@dimen/px30dp"
            android:visibility="gone"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/rightImgBtn"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_gravity="right"
            android:src="@drawable/ico_mysetment"
            android:layout_width="@dimen/px40dp"
            android:layout_height="@dimen/px40dp">

        </ImageView>



    </android.support.v7.widget.Toolbar>


</RelativeLayout>
