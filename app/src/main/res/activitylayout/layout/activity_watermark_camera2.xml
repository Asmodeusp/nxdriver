<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/fr"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlphoto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.saimawzc.freight.weight.utils.foucsurfaceview.FocusSurfaceView
            android:id="@+id/preview_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:visibility="visible"
            app:focus_frame_can_change="true"
            app:focus_frame_color="@android:color/transparent"
            app:focus_frame_stroke_weight="0dp"
            app:focus_guide_color="@android:color/transparent"
            app:focus_guide_show_mode="not_show"
            app:focus_guide_stroke_weight="0dp"
            app:focus_handle_color="@android:color/transparent"
            app:focus_handle_show_mode="not_show"
            app:focus_handle_size="14dp"
            app:focus_min_frame_size="50dp"
            app:focus_overlay_color="#66000000"
            app:focus_touch_padding="8dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">
        <ImageView
            android:visibility="visible"
            android:id="@+id/image_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ico_set"/>
        <ImageView
            android:id="@+id/image_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_flash_auto"/>

        <ImageView
            android:id="@+id/image_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/ic_camera"/>

    </LinearLayout>
    <ImageButton
        android:layout_marginLeft="@dimen/px20dp"
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="30dp"
        android:background="@drawable/ic_close_bottom_bar"
        android:visibility="visible" />
    <Button
        android:id="@+id/take_bt"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/take_photo_selector"/>

</FrameLayout>