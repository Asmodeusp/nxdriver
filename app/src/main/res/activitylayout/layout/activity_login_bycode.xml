<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px400dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ico_login"
                    android:layout_height="@dimen/px300dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/px52dp"
                    android:layout_marginRight="@dimen/px52dp"
                    android:layout_marginTop="@dimen/px20dp"
                    android:background="@color/divider_e5e5e5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px116dp"
                    android:layout_marginLeft="@dimen/px52dp"
                    android:layout_marginRight="@dimen/px52dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/px30dp"
                        android:src="@drawable/ico_user" />


                    <EditText
                        android:id="@+id/edit_account"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/px8dp"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:layout_marginRight="@dimen/px20dp"
                        android:layout_marginTop="@dimen/px8dp"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:hint="请输入您的手机号"
                        android:inputType="text"
                        android:paddingLeft="@dimen/px20dp"
                        android:textColor="#1c1c1c"
                        android:textColorHint="#ccc"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry" />

                    <ImageView
                        android:id="@+id/btn_acc_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/px30dp"
                        android:src="@drawable/ico_empty"
                        android:visibility="invisible" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/px52dp"
                    android:layout_marginRight="@dimen/px52dp"
                    android:background="@color/divider_e5e5e5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px116dp"
                    android:layout_marginLeft="@dimen/px52dp"
                    android:layout_marginRight="@dimen/px52dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/px30dp"
                        android:src="@drawable/ico_password" />

                    <EditText
                        android:id="@+id/edit_Code"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:layout_marginTop="@dimen/px8dp"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:hint="请输入您的验证码"
                        android:inputType="number"
                        android:paddingLeft="@dimen/px20dp"
                        android:textColor="#1c1c1c"
                        android:textColorHint="#ccc"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry" />

                    <View
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/px10dp"
                        android:background="@color/divider_e5e5e5"
                        android:layout_width="@dimen/px5dp"
                        android:layout_height="@dimen/px50dp"></View>

                    <TextView
                        android:textColor="@color/blue"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:textSize="@dimen/px30dp"
                        android:id="@+id/btn_getCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="获取验证码" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="@dimen/px52dp"
                    android:layout_marginRight="@dimen/px52dp"
                    android:background="#8888" />

                <LinearLayout
                    android:paddingTop="@dimen/px20dp"
                    android:paddingBottom="@dimen/px20dp"
                    android:layout_marginTop="@dimen/px20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">
                    <TextView
                        android:id="@+id/loginByPass"
                        android:layout_marginLeft="@dimen/px52dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="密码登录"
                        android:textColor="@color/blue"
                        android:textSize="15sp" />


                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px88dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/px52dp"
                    android:layout_marginRight="@dimen/px52dp">
                    <TextView

                        android:id="@+id/btn_Login"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/loading_btn_login"
                        android:gravity="center"
                        android:text="登录"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/btn_Login_mask"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/loading_btn_white"
                        android:clickable="true"
                        android:visibility="visible" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px88dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/px52dp"
                    android:layout_marginRight="@dimen/px52dp"
                    android:layout_marginTop="@dimen/px50dp">
                    <TextView

                        android:id="@+id/btn_Resister"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/loading_btn_resister"
                        android:gravity="center"
                        android:text="立即注册"
                        android:textColor="@color/blue"
                        android:textSize="16sp" />

                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>



    <LinearLayout
        android:layout_marginBottom="@dimen/px20dp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/checkPrivaty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </CheckBox>
        <TextView
            android:textSize="@dimen/px25dp"
            android:text="已阅读并同意"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/useAgreement"
            android:layout_marginRight="@dimen/px10dp"
            android:layout_marginLeft="@dimen/px10dp"
            android:textSize="@dimen/px25dp"
            android:textColor="@color/blue"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:textSize="@dimen/px25dp"
            android:text="和"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TextView>
        <TextView
            android:id="@+id/btnPrivacy"
            android:layout_marginLeft="@dimen/px10dp"
            android:textSize="@dimen/px25dp"
            android:textColor="@color/blue"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TextView>
    </LinearLayout>




</RelativeLayout>