<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/video_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        ></FrameLayout>
    <include
        android:id="@+id/top"
        layout="@layout/common_toolbar"></include>
    <WebView
        android:layout_below="@+id/top"
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <com.saimawzc.freight.weight.utils.DragTV
        android:visibility="gone"
        android:id="@+id/tvread"
        android:textSize="@dimen/px24dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/dot_selected"
        android:text=""
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="开始任务"
        android:layout_marginRight="@dimen/px40dp"
        android:layout_marginBottom="@dimen/px20dp"
        android:layout_gravity="right"
        android:layout_width="55dp"
        android:layout_height="55dp">

    </com.saimawzc.freight.weight.utils.DragTV>
</RelativeLayout>