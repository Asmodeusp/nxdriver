<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_gravity="end"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:id="@+id/ingQuit"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ico_delete"
                    android:layout_width="20dp"
                    android:layout_height="20dp">
                </ImageView>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvquerytime"
                    android:layout_marginTop="@dimen/px30dp"
                    android:layout_marginBottom="@dimen/px30dp"
                   android:layout_marginLeft="@dimen/px50dp"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/px28dp"
                    android:text="查询时间"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <RadioGroup
                    android:id="@+id/grouptime"
                    android:layout_marginLeft="@dimen/px50dp"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/group_threemonth"
                        android:textColor="@color/color_black"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/select_wallet_radio"
                        android:text="三个月"
                        android:layout_width="76dp"
                        android:layout_height="28dp">

                    </RadioButton>
                    <RadioButton
                        android:id="@+id/group_sixmonth"
                        android:textColor="@color/color_black"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/select_wallet_radio"
                        android:text="六个月"
                        android:layout_width="76dp"
                        android:layout_height="28dp">

                    </RadioButton>
                    <RadioButton
                        android:id="@+id/group_costom"
                        android:textColor="@color/color_black"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/select_wallet_radio"
                        android:text="自定义"
                        android:layout_width="76dp"
                        android:layout_height="28dp">

                    </RadioButton>
                </RadioGroup>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lltime"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/px30dp"
                        android:layout_marginRight="@dimen/px30dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/px50dp"
                        android:layout_width="match_parent"
                        android:layout_height="28dp">
                        <TextView
                            android:textSize="@dimen/px28dp"
                            android:textColor="@color/color_black"
                            android:text="起始时间："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                            android:id="@+id/tvStartTime"
                            android:textSize="@dimen/px28dp"
                            android:textColor="@color/color_black"
                            android:gravity="right"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                    <include layout="@layout/common_line"></include>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_marginRight="@dimen/px30dp"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/px50dp"
                        android:layout_width="match_parent"
                        android:layout_height="28dp">
                        <TextView
                            android:textSize="@dimen/px28dp"
                            android:textColor="@color/color_black"
                            android:text="截止时间："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                            android:id="@+id/tvEndTime"
                            android:textSize="@dimen/px28dp"
                            android:textColor="@color/color_black"
                            android:gravity="right"
                            android:text=""
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </TextView>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/px20dp"
                android:background="@color/bg"
                android:layout_width="match_parent"
                android:layout_height="10dp"></View>

            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="@dimen/px30dp"
                   android:layout_marginLeft="@dimen/px50dp"
                    android:layout_marginBottom="@dimen/px30dp"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/px28dp"
                    android:text="交易金额"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <LinearLayout
                    android:layout_marginBottom="@dimen/px30dp"
                    android:layout_marginLeft="@dimen/px50dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/edminlimit"
                        android:textSize="@dimen/px28dp"
                        android:inputType="numberDecimal"
                        android:gravity="center"
                        android:text=""
                        android:hint="最低"
                        android:textColor="@color/color_black"
                        android:background="@drawable/shape_list_btn"
                        android:layout_width="100dp"
                        android:layout_height="28dp">
                    </EditText>
                    <View
                        android:layout_marginLeft="@dimen/px10dp"
                        android:layout_marginRight="@dimen/px10dp"
                        android:layout_gravity="center"
                         android:background="@color/gray999"
                        android:layout_width="25dp"
                        android:layout_height="1dp">

                    </View>

                    <EditText
                        android:id="@+id/edmaxlimit"
                        android:textSize="@dimen/px28dp"
                        android:inputType="numberDecimal"
                        android:gravity="center"
                        android:text=""
                        android:hint="最高"
                        android:textColor="@color/color_black"
                        android:background="@drawable/shape_list_btn"
                        android:layout_width="100dp"
                        android:layout_height="28dp">
                    </EditText>
                </LinearLayout>
                <HorizontalScrollView
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioGroup
                        android:id="@+id/groupLimit"
                        android:layout_marginLeft="@dimen/px50dp"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/rb_1000"
                            android:textColor="@color/color_black"
                            android:gravity="center"
                            android:button="@null"
                            android:background="@drawable/select_wallet_radio"
                            android:text="1千以下"
                            android:layout_width="66dp"
                            android:layout_height="26dp">

                        </RadioButton>
                        <RadioButton
                            android:id="@+id/rb_5000"
                            android:textColor="@color/color_black"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:button="@null"
                            android:background="@drawable/select_wallet_radio"
                            android:text="1千-5千"
                            android:layout_width="66dp"
                            android:layout_height="26dp">

                        </RadioButton>
                        <RadioButton
                            android:id="@+id/rb10000"
                            android:textColor="@color/color_black"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:button="@null"
                            android:background="@drawable/select_wallet_radio"
                            android:text="5千-1万"
                            android:layout_width="66dp"
                            android:layout_height="26dp">

                        </RadioButton>
                        <RadioButton
                            android:id="@+id/rbmorethanwan"
                            android:textColor="@color/color_black"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:button="@null"
                            android:background="@drawable/select_wallet_radio"
                            android:text="1万以上"
                            android:layout_width="66dp"
                            android:layout_height="26dp">

                        </RadioButton>
                    </RadioGroup>
                </HorizontalScrollView>




            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/px20dp"
                android:background="@color/bg"
                android:layout_width="match_parent"
                android:layout_height="10dp"></View>
            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="@dimen/px30dp"
                    android:layout_marginTop="@dimen/px30dp"
                    android:layout_marginLeft="@dimen/px50dp"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/px28dp"
                    android:text="收支类型"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <com.saimawzc.freight.weight.MyRadioGroup
                    android:id="@+id/mygroup"
                    android:layout_marginLeft="@dimen/px50dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/radio_sz_all"
                            android:textColor="@color/color_black"
                            android:gravity="center"
                            android:button="@null"
                            android:background="@drawable/select_wallet_radio"
                            android:text="全部"
                            android:layout_width="76dp"
                            android:layout_height="28dp">

                        </RadioButton>
                        <RadioButton
                            android:id="@+id/radio_sz_into"
                            android:textColor="@color/color_black"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:button="@null"
                            android:background="@drawable/select_wallet_radio"
                            android:text="收入"
                            android:layout_width="76dp"
                            android:layout_height="28dp">

                        </RadioButton>
                        <RadioButton
                            android:id="@+id/radio_sz_zc"
                            android:textColor="@color/color_black"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:button="@null"
                            android:background="@drawable/select_wallet_radio"
                            android:text="支出"
                            android:layout_width="76dp"
                            android:layout_height="28dp">

                        </RadioButton>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginBottom="@dimen/px20dp"
                        android:layout_marginTop="@dimen/px30dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/radio_cz"
                            android:textColor="@color/color_black"
                            android:gravity="center"
                            android:button="@null"
                            android:background="@drawable/select_wallet_radio"
                            android:text="充值"
                            android:layout_width="76dp"
                            android:layout_height="28dp">

                        </RadioButton>
                        <RadioButton
                            android:id="@+id/radio_sz_tx"
                            android:textColor="@color/color_black"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:button="@null"
                            android:background="@drawable/select_wallet_radio"
                            android:text="提现"
                            android:layout_width="76dp"
                            android:layout_height="28dp">
                        </RadioButton>
                    </LinearLayout>

                </com.saimawzc.freight.weight.MyRadioGroup>

            </LinearLayout>
            <View
                android:layout_marginTop="@dimen/px20dp"
                android:background="@color/bg"
                android:layout_width="match_parent"
                android:layout_height="10dp"></View>
            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                     android:layout_marginTop="@dimen/px30dp"
                    android:layout_marginLeft="@dimen/px50dp"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/px28dp"
                    android:text="排序"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <RadioGroup
                    android:id="@+id/groupsort"
                    android:layout_marginTop="@dimen/px30dp"
                    android:layout_marginLeft="@dimen/px50dp"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/sort_desc"
                        android:textColor="@color/color_black"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/select_wallet_radio"
                        android:text="由近及远"
                        android:layout_width="76dp"
                        android:layout_height="28dp">

                    </RadioButton>
                    <RadioButton
                        android:id="@+id/sort_asc"
                        android:textColor="@color/color_black"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/select_wallet_radio"
                        android:text="由远及近"
                        android:layout_width="76dp"
                        android:layout_height="28dp">

                    </RadioButton>

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/px80dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvrest"
                    android:layout_marginLeft="@dimen/px50dp"
                    android:background="@drawable/shape_list_btn"
                    android:gravity="center"
                    android:text="重置"
                    android:layout_width="120dp"
                    android:layout_height="36dp">

                </TextView>
                <TextView
                    android:id="@+id/tvOrder"
                    android:layout_marginBottom="@dimen/px100dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape_list_btn_blue"
                    android:gravity="center"
                    android:text="确定"
                    android:layout_width="120dp"
                    android:layout_height="36dp">

                </TextView>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>