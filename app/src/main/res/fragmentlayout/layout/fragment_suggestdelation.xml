<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/common_toolbar"></include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="@dimen/px30dp"
           android:layout_marginLeft="@dimen/px30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="@dimen/px24dp"
                android:textColor="@color/color_black"
                android:textSize="@dimen/px30dp"
                android:text="反馈信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/tvquestionContect"
                android:textColor="@color/color_black"
                android:textSize="@dimen/px30dp"
                android:layout_marginTop="@dimen/px20dp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/cy_question"
                android:layout_marginTop="@dimen/px20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

            <View
                android:layout_marginTop="@dimen/px10dp"
                android:background="@color/bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px20dp">

            </View>
            <TextView
                android:textStyle="bold"
                android:layout_marginTop="@dimen/px24dp"
                android:textColor="@color/color_black"
                android:textSize="@dimen/px30dp"
                android:text="回复信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/tvanstionContect"
                android:textColor="@color/color_black"
                android:textSize="@dimen/px30dp"
                android:layout_marginTop="@dimen/px20dp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <android.support.v7.widget.RecyclerView
                android:visibility="gone"
                android:id="@+id/cy_anstion"
                android:layout_marginTop="@dimen/px20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>