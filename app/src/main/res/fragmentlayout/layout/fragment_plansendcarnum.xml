<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:background="@color/bg"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/common_toolbar"></include>
        <RelativeLayout
            android:gravity="top|right"
            android:layout_weight="1"
            android:id="@+id/rl_mycar"
            android:layout_marginTop="@dimen/px20dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp">
            <TextView
                android:layout_marginLeft="@dimen/px24dp"
                android:textSize="@dimen/px28dp"
                android:layout_centerVertical="true"
                android:textColor="@color/color_black"
                android:text="预提量"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_marginRight="@dimen/px40dp"
                    android:gravity="right"
                    android:textColor="@color/gray888"
                    android:textSize="@dimen/px26dp"
                    android:id="@+id/edNum"
                    android:text=""
                    android:inputType="numberDecimal"
                    android:hint="请输入预提量"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="top|right"
            android:layout_weight="1"
            android:id="@+id/rl_num"
            android:layout_marginTop="@dimen/px1dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px100dp">
            <TextView
                android:layout_marginLeft="@dimen/px24dp"
                android:textSize="@dimen/px28dp"
                android:layout_centerVertical="true"
                android:textColor="@color/color_black"
                android:text="车次"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:layout_marginRight="@dimen/px40dp"
                    android:gravity="right"
                    android:textColor="@color/gray888"
                    android:textSize="@dimen/px26dp"
                    android:id="@+id/edCarNum"
                    android:text=""
                    android:inputType="number"
                    android:hint="请输入车次"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="132dp"
        android:layout_marginRight="@dimen/px24dp"
        android:layout_marginLeft="@dimen/px24dp"
        android:layout_below="@+id/ll"
        android:id="@+id/tvOrder"
        android:textSize="@dimen/px30dp"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/white"
        android:background="@drawable/loading_btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px80dp">

    </TextView>



</RelativeLayout>