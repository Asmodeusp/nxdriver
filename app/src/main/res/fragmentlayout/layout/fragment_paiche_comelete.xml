<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/commonsearch"></include>

    <LinearLayout
        android:background="@color/bg"
        android:paddingTop="@dimen/px10dp"
        android:paddingBottom="@dimen/px10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/llstarttime"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/px30dp"
                    android:text="开始时间"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <ImageView
                    android:layout_marginLeft="@dimen/px10dp"
                    android:src="@drawable/ico_down"
                    android:layout_width="12dp"
                    android:layout_height="8dp">

                </ImageView>

            </LinearLayout>

            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px10dp"
                android:gravity="center"
                android:hint="选择时间"
                android:text=""
                android:textColor="@color/blue"
                android:textSize="@dimen/px30dp">

            </TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/llendtime"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/px30dp"
                    android:text="结束时间"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <ImageView
                    android:layout_marginLeft="@dimen/px10dp"
                    android:src="@drawable/ico_down"
                    android:layout_width="12dp"
                    android:layout_height="8dp">

                </ImageView>

            </LinearLayout>
            <TextView
                android:id="@+id/tvEndTime"
                android:hint="选择时间"
                android:textColor="@color/blue"
                android:textSize="@dimen/px30dp"
                android:layout_marginTop="@dimen/px10dp"
                android:gravity="center"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/llstatus"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/px30dp"
                    android:text="完成状态"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <ImageView
                    android:layout_marginLeft="@dimen/px10dp"
                    android:src="@drawable/ico_down"
                    android:layout_width="12dp"
                    android:layout_height="8dp">

                </ImageView>

            </LinearLayout>
            <TextView
                android:id="@+id/tvStatus"
                android:textColor="@color/blue"
                android:textSize="@dimen/px30dp"
                android:layout_marginTop="@dimen/px10dp"
                android:gravity="center"
                android:text=""
                android:hint="选择状态"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/commonrecyvleview"/>




</LinearLayout>