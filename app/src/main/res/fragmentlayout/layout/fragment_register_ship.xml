<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/common_toolbar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/chooseidpositive"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/px20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgRoadTransport"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px200dp"
                        android:layout_margin="@dimen/px10dp"
                        android:src="@drawable/ico_defalut_imgupload"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/px10dp"
                        android:text="水路运输证" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/chooseidotherside"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgDrivinglicense"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/px200dp"
                            android:layout_margin="@dimen/px10dp"
                            android:src="@drawable/ico_defalut_imgupload"
                            android:scaleType="fitXY" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/px10dp"
                            android:text="行驶证" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/px20dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imagecarinfo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px200dp"
                        android:layout_margin="@dimen/px10dp"
                        android:src="@drawable/ico_defalut_imgupload"
                        android:scaleType="fitXY" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:layout_marginTop="@dimen/px10dp"
                        android:text="船舶45度信息" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:layout_weight="1"
                    android:visibility="invisible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/px200dp"
                            android:layout_margin="@dimen/px10dp"
                            android:src="@drawable/ico_app"
                            android:scaleType="centerCrop" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/px10dp"
                            android:text="行驶证" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px20dp"
                android:layout_marginTop="@dimen/px20dp"
                android:background="@color/bg_17">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_marginTop="@dimen/px20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="该船舶是否加入船运网:"
                    android:textSize="@dimen/px30dp" />

                <com.saimawzc.freight.weight.SwitchButton
                    app:sb_checked="true"
                    app:sb_show_indicator="false"
                    app:sb_checked_color="@color/blue"
                    android:id="@+id/toggleship"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/px20dp"
                    android:background="@null" />
            </LinearLayout>

          <include layout="@layout/common_line"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_marginTop="@dimen/px20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="允许船舶被其他用户添加:"
                    android:textSize="@dimen/px30dp" />

                <com.saimawzc.freight.weight.SwitchButton
                    app:sb_checked="true"
                    app:sb_checked_color="@color/blue"
                   app:sb_show_indicator="false"
                    android:id="@+id/toggleadd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="@dimen/px20dp"
                    android:background="@null" />
            </LinearLayout>

            <include layout="@layout/common_line"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_marginTop="@dimen/px20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="船舶名称:"
                    android:textSize="@dimen/px30dp" />

                <EditText
                    android:paddingRight="@dimen/px30dp"
                    android:id="@+id/edshipname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入"
                    android:textSize="@dimen/px30dp" />
            </LinearLayout>

            <include layout="@layout/common_line"></include>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_marginTop="@dimen/px20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/car"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="船运网ID:"
                    android:textSize="@dimen/px30dp" />

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:visibility="gone"
                        android:padding="@dimen/px10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:background="@drawable/btn_sold_wihie"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tvplate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="京"
                            android:textSize="@dimen/px30dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="∨:"
                            android:textSize="@dimen/px30dp" />
                    </LinearLayout>

                    <EditText
                        android:textSize="@dimen/px28dp"
                        android:id="@+id/edshipId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:layout_marginRight="@dimen/px30dp"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="输入船运网ID"
                        android:maxLines="1" />
                </LinearLayout>


            </RelativeLayout>

            <include layout="@layout/common_line"></include>


            <RelativeLayout
                android:paddingRight="@dimen/px10dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_marginTop="@dimen/px20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_marginRight="@dimen/px20dp"
                    android:layout_toLeftOf="@+id/ico"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="船类型:"
                        android:textSize="@dimen/px30dp" />

                    <TextView
                        android:id="@+id/carmodel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:background="@null"
                        android:gravity="right"
                        android:hint="请选择"
                        android:textSize="@dimen/px30dp" />


                </LinearLayout>
                <ImageView
                    android:layout_marginTop="@dimen/px5dp"
                    android:id="@+id/ico"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ico_right"
                    android:layout_width="@dimen/px30dp"
                    android:layout_height="@dimen/px30dp" />

            </RelativeLayout>
            <include layout="@layout/common_line"></include>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_marginTop="@dimen/px20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="船舶长度:"
                    android:textSize="@dimen/px30dp" />

                <EditText
                    android:text=""
                    android:layout_weight="1"
                    android:paddingRight="@dimen/px20dp"
                    android:inputType="numberDecimal"
                    android:id="@+id/edCarLength"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入"
                    android:textSize="@dimen/px30dp" />
                <TextView
                    android:layout_marginRight="@dimen/px20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="米"
                    android:textSize="@dimen/px30dp" />
            </LinearLayout>
            <include layout="@layout/common_line"></include>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_marginTop="@dimen/px20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="船舶宽度:"
                    android:textSize="@dimen/px30dp" />

                <EditText
                    android:layout_weight="1"
                    android:paddingRight="@dimen/px20dp"
                    android:inputType="numberDecimal"
                    android:id="@+id/edCarWith"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入"
                    android:textSize="@dimen/px30dp" />
                <TextView
                    android:layout_marginRight="@dimen/px20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="米"
                    android:textSize="@dimen/px30dp" />
            </LinearLayout>
            <include layout="@layout/common_line"></include>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px80dp"
            android:layout_marginBottom="@dimen/px10dp"
            android:layout_marginLeft="@dimen/px20dp"
            android:layout_marginTop="@dimen/px20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="船舶高度:"
                android:textSize="@dimen/px30dp" />

            <EditText
                android:layout_weight="1"
                android:paddingRight="@dimen/px20dp"
                android:inputType="numberDecimal"
                android:id="@+id/edCarHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px20dp"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入"
                android:textSize="@dimen/px30dp" />
            <TextView
                android:layout_marginRight="@dimen/px20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="米"
                android:textSize="@dimen/px30dp" />
        </LinearLayout>
            <include layout="@layout/common_line"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_marginTop="@dimen/px20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="容积:"
                    android:textSize="@dimen/px30dp" />

                <EditText
                    android:inputType="numberDecimal"
                    android:layout_weight="1"
                    android:paddingRight="@dimen/px20dp"
                    android:id="@+id/carweight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入"
                    android:text=""
                    android:textSize="@dimen/px30dp" />
                <TextView
                    android:layout_marginRight="@dimen/px20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="吨"
                    android:textSize="@dimen/px30dp" />
            </LinearLayout>

            <include layout="@layout/common_line"></include>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_marginTop="@dimen/px20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="业主名称:"
                    android:textSize="@dimen/px30dp" />

                <EditText
                    android:paddingRight="@dimen/px20dp"
                    android:id="@+id/edusername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入"
                    android:textSize="@dimen/px30dp" />
            </LinearLayout>

            <include layout="@layout/common_line"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_marginTop="@dimen/px20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="运输证号:"
                    android:textSize="@dimen/px30dp" />

                <EditText
                    android:text=""
                    android:layout_marginRight="@dimen/px20dp"
                    android:paddingRight="@dimen/px20dp"
                    android:id="@+id/edPassNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入"
                    android:textSize="@dimen/px30dp" />
            </LinearLayout>

            <include layout="@layout/common_line"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_marginTop="@dimen/px20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀请码:"
                    android:textSize="@dimen/px30dp" />

                <TextView
                    android:layout_marginRight="@dimen/px30dp"
                    android:paddingRight="@dimen/px20dp"
                    android:id="@+id/edinvitEnter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="扫一扫获取邀请码"
                    android:textSize="@dimen/px30dp" />
            </LinearLayout>

            <include layout="@layout/common_line"></include>
        </LinearLayout>
    </ScrollView>

</LinearLayout>