<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <include layout="@layout/common_toolbar"></include>


   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:layout_marginLeft="@dimen/px20dp"
               android:visibility="visible"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:id="@+id/chooseidpositive"
                   android:layout_marginRight="@dimen/px20dp"
                   android:gravity="center"
                   android:orientation="vertical"
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <ImageView
                       android:scaleType="fitXY"
                       android:id="@+id/imgviewpositive"
                       android:layout_margin="@dimen/px10dp"
                       android:src="@drawable/ico_default_idcard_front"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/px200dp" />
                   <TextView
                       android:layout_marginTop="@dimen/px10dp"
                       android:text="身份证正面"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />


               </LinearLayout>


               <LinearLayout
                   android:id="@+id/chooseidotherside"
                   android:layout_marginLeft="@dimen/px20dp"
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <LinearLayout
                       android:gravity="center"
                       android:orientation="vertical"
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <ImageView
                           android:scaleType="fitXY"
                           android:id="@+id/imgviewotherside"
                           android:layout_margin="@dimen/px10dp"
                           android:src="@drawable/ico_defalut_idcard_back"
                           android:layout_width="match_parent"
                           android:layout_height="@dimen/px200dp" />

                       <TextView
                           android:id="@+id/textView2"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="@dimen/px10dp"
                           android:text="身份证反面" />

                   </LinearLayout>

               </LinearLayout>
               <LinearLayout
                   android:layout_marginRight="@dimen/px20dp"
                   android:gravity="center"
                   android:orientation="vertical"
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <ImageView
                       android:scaleType="fitXY"
                       android:id="@+id/imgviewbaz"
                       android:layout_margin="@dimen/px10dp"
                       android:src="@drawable/ico_defalut_takepic"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/px200dp" />
                   <TextView
                       android:layout_marginTop="@dimen/px10dp"
                       android:text="一般纳税人备案证"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />


               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:visibility="visible"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:layout_marginRight="@dimen/px20dp"
                   android:gravity="center"
                   android:orientation="vertical"
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <ImageView
                       android:scaleType="fitXY"
                       android:id="@+id/imgviewyyzz"
                       android:layout_margin="@dimen/px10dp"
                       android:src="@drawable/ico_defalut_takepic"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/px200dp" />
                   <TextView
                       android:layout_marginTop="@dimen/px10dp"
                       android:text="营业执照"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />


               </LinearLayout>


               <LinearLayout
                   android:layout_marginLeft="@dimen/px20dp"
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <LinearLayout
                       android:gravity="center"
                       android:orientation="vertical"
                       android:layout_weight="1"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">
                       <ImageView
                           android:scaleType="fitXY"
                           android:id="@+id/imagetransport"
                           android:layout_margin="@dimen/px10dp"
                           android:src="@drawable/ico_defalut_takepic"
                           android:layout_width="match_parent"
                           android:layout_height="@dimen/px200dp" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="@dimen/px10dp"
                           android:text="道路运输许可证" />

                   </LinearLayout>

               </LinearLayout>
               <LinearLayout
                   android:layout_marginRight="@dimen/px20dp"
                   android:gravity="center"
                   android:orientation="vertical"
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <ImageView
                       android:scaleType="fitXY"
                       android:id="@+id/imageviewentrust"
                       android:layout_margin="@dimen/px10dp"
                       android:src="@drawable/ico_defalut_takepic"
                       android:layout_width="match_parent"
                       android:layout_height="@dimen/px200dp" />
                   <TextView
                       android:layout_marginTop="@dimen/px10dp"
                       android:text="授权委托书"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />


               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:layout_marginLeft="@dimen/px20dp"
               android:visibility="visible"
               android:layout_marginRight="@dimen/px20dp"
               android:gravity="center"
               android:orientation="vertical"
               android:layout_width="@dimen/px200dp"
               android:layout_height="wrap_content">
               <ImageView
                   android:scaleType="fitXY"
                   android:id="@+id/legalpersonIdcard"
                   android:layout_margin="@dimen/px10dp"
                   android:src="@drawable/ico_defalut_takepic"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/px200dp" />
               <TextView
                   android:layout_marginTop="@dimen/px10dp"
                   android:text="法人身份证"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
           </LinearLayout>

           <View
               android:layout_marginTop="@dimen/px20dp"
               android:background="@color/bg_17"
               android:layout_width="match_parent"
               android:layout_height="@dimen/px40dp"></View>

           <LinearLayout
               android:gravity="center"
               android:layout_marginBottom="@dimen/px10dp"
               android:layout_marginTop="@dimen/px20dp"
               android:layout_marginLeft="@dimen/px20dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="@dimen/px80dp">

               <TextView
                   android:textColor="@color/gray333"
                   android:textSize="@dimen/px30dp"
                   android:text="用户姓名:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <EditText
                   android:layout_marginRight="@dimen/px30dp"
                   android:gravity="right"
                   android:textColor="@color/color_black"
                   android:id="@+id/tvuser"
                   android:textSize="@dimen/px30dp"
                   android:layout_marginLeft="@dimen/px20dp"
                   android:background="@null"
                   android:hint="上传照片自动获取"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
           </LinearLayout>
           <include layout="@layout/common_line"></include>


           <LinearLayout
               android:gravity="center"
               android:layout_marginBottom="@dimen/px10dp"
               android:layout_marginTop="@dimen/px20dp"
               android:layout_marginLeft="@dimen/px20dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="@dimen/px80dp">

               <TextView
                   android:textColor="@color/gray333"
                   android:textSize="@dimen/px30dp"
                   android:text="身份证号:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <EditText
                   android:layout_marginRight="@dimen/px30dp"
                   android:gravity="right"
                   android:textColor="@color/color_black"
                   android:id="@+id/tvidcard"
                   android:textSize="@dimen/px30dp"
                   android:layout_marginLeft="@dimen/px20dp"
                   android:background="@null"
                   android:hint="上传照片自动获取"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
           </LinearLayout>
           <include layout="@layout/common_line"></include>
           <LinearLayout
               android:gravity="center"
               android:layout_marginBottom="@dimen/px10dp"
               android:layout_marginTop="@dimen/px20dp"
               android:layout_marginLeft="@dimen/px20dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="@dimen/px80dp">

               <TextView
                   android:textColor="@color/gray333"
                   android:textSize="@dimen/px30dp"
                   android:text="用户类型:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <TextView
                   android:layout_marginRight="@dimen/px30dp"
                   android:gravity="right"
                   android:textColor="@color/color_black"
                   android:id="@+id/tvcarrier"
                   android:textSize="@dimen/px30dp"
                   android:layout_marginLeft="@dimen/px20dp"
                   android:background="@null"
                   android:text="承运商"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
           </LinearLayout>
           <include layout="@layout/common_line"></include>
           <LinearLayout
               android:gravity="center"
               android:layout_marginBottom="@dimen/px10dp"
               android:layout_marginTop="@dimen/px20dp"
               android:layout_marginLeft="@dimen/px20dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="@dimen/px80dp">

               <TextView
                   android:textColor="@color/gray333"
                   android:textSize="@dimen/px30dp"
                   android:text="所在地区:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <TextView
                   android:layout_marginRight="@dimen/px30dp"
                   android:gravity="right"
                   android:textColor="@color/color_black"
                   android:text=""
                   android:id="@+id/tvArea"
                   android:textSize="@dimen/px30dp"
                   android:layout_marginLeft="@dimen/px20dp"
                   android:background="@null"
                   android:hint="请选择所在区域"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
           </LinearLayout>
           <include layout="@layout/common_line"></include>
           <LinearLayout
               android:gravity="center"
               android:layout_marginBottom="@dimen/px10dp"
               android:layout_marginTop="@dimen/px20dp"
               android:layout_marginLeft="@dimen/px20dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="@dimen/px80dp">

               <TextView
                   android:textColor="@color/gray333"
                   android:textSize="@dimen/px30dp"
                   android:text="公司名称:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <EditText
                   android:layout_marginRight="@dimen/px30dp"
                   android:gravity="right"
                   android:textColor="@color/color_black"
                   android:id="@+id/tvcompany"
                   android:textSize="@dimen/px30dp"
                   android:layout_marginLeft="@dimen/px20dp"
                   android:background="@null"
                   android:hint="上传图片自动获取"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
           </LinearLayout>
           <include layout="@layout/common_line"></include>
           <LinearLayout
               android:visibility="gone"
               android:gravity="center"
               android:layout_marginBottom="@dimen/px10dp"
               android:layout_marginTop="@dimen/px20dp"
               android:layout_marginLeft="@dimen/px20dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="@dimen/px80dp">

               <TextView
                   android:textColor="@color/gray333"
                   android:textSize="@dimen/px30dp"
                   android:text="开票最大限额:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <EditText
                   android:inputType="numberDecimal"
                   android:layout_marginRight="@dimen/px30dp"
                   android:gravity="right"
                   android:textColor="@color/gray888"
                   android:id="@+id/edmaxAmcount"
                   android:textSize="@dimen/px30dp"
                   android:layout_marginLeft="@dimen/px20dp"
                   android:background="@null"
                   android:text="100000"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
           </LinearLayout>

           <LinearLayout
               android:gravity="center"
               android:layout_marginBottom="@dimen/px10dp"
               android:layout_marginTop="@dimen/px20dp"
               android:layout_marginLeft="@dimen/px20dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="@dimen/px80dp">

               <TextView
                   android:textColor="@color/gray333"
                   android:textSize="@dimen/px30dp"
                   android:text="法人姓名:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <EditText
                   android:layout_marginRight="@dimen/px30dp"
                   android:gravity="right"
                   android:textColor="@color/color_black"
                   android:id="@+id/tvfaname"
                   android:textSize="@dimen/px30dp"
                   android:layout_marginLeft="@dimen/px20dp"
                   android:background="@null"
                   android:hint="上传图片自动获取"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
           </LinearLayout>
           <include layout="@layout/common_line"></include>
           <LinearLayout
               android:gravity="center"
               android:layout_marginBottom="@dimen/px10dp"
               android:layout_marginTop="@dimen/px20dp"
               android:layout_marginLeft="@dimen/px20dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="@dimen/px80dp">

               <TextView
                   android:textColor="@color/gray333"
                   android:textSize="@dimen/px30dp"
                   android:text="法人身份证号:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <EditText
                   android:layout_marginRight="@dimen/px30dp"
                   android:gravity="right"
                   android:textColor="@color/color_black"
                   android:id="@+id/tvfrcard"
                   android:textSize="@dimen/px30dp"
                   android:layout_marginLeft="@dimen/px20dp"
                   android:background="@null"
                   android:hint="上传图片自动获取"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
           </LinearLayout>
           <include layout="@layout/common_line"></include>
           <LinearLayout
               android:gravity="center"
               android:layout_marginBottom="@dimen/px10dp"
               android:layout_marginTop="@dimen/px20dp"
               android:layout_marginLeft="@dimen/px20dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="@dimen/px80dp">

               <TextView
                   android:textColor="@color/gray333"
                   android:textSize="@dimen/px30dp"
                   android:text="营业执照编号:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <EditText
                   android:gravity="right"
                   android:layout_marginRight="@dimen/px30dp"
                   android:textColor="@color/color_black"
                   android:id="@+id/tvyezz"
                   android:textSize="@dimen/px30dp"
                   android:layout_marginLeft="@dimen/px20dp"
                   android:background="@null"
                   android:hint="上传图片自动获取"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
           </LinearLayout>
           <include layout="@layout/common_line"></include>
           <LinearLayout
               android:gravity="center"
               android:layout_marginBottom="@dimen/px10dp"
               android:layout_marginTop="@dimen/px20dp"
               android:layout_marginLeft="@dimen/px20dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="@dimen/px80dp">

               <TextView
                   android:textColor="@color/gray333"
                   android:textSize="@dimen/px30dp"
                   android:text="营业执照有效期:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <TextView
                   android:textColor="@color/color_black"
                   android:textSize="@dimen/px20dp"
                   android:layout_marginLeft="@dimen/px20dp"
                   android:text=""
                   android:hint="点击选择营业执照有效期"
                   android:id="@+id/tvyezzTime"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

              <RadioGroup
                  android:id="@+id/radio"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                  <RadioButton
                      android:paddingLeft="@dimen/px20dp"
                      android:button="@drawable/bg_radiobutton"
                      android:checked="true"
                      android:id="@+id/groupnomal"
                      android:layout_weight="1"
                      android:text="普通"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" />
                  <RadioButton
                      android:paddingLeft="@dimen/px20dp"
                      android:button="@drawable/bg_radiobutton"
                      android:id="@+id/groupforver"
                      android:layout_weight="1"
                      android:text="长期"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content" />

              </RadioGroup>
           </LinearLayout>
           <include layout="@layout/common_line"></include>

           <LinearLayout
               android:gravity="center"
               android:layout_marginBottom="@dimen/px10dp"
               android:layout_marginTop="@dimen/px20dp"
               android:layout_marginLeft="@dimen/px20dp"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="@dimen/px80dp">

               <TextView
                   android:textColor="@color/gray333"
                   android:textSize="@dimen/px30dp"
                   android:text="道路运输证编号:"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <EditText
                   android:layout_marginRight="@dimen/px30dp"
                   android:gravity="right"
                   android:textColor="@color/color_black"
                   android:id="@+id/tvysz"
                   android:textSize="@dimen/px30dp"
                   android:layout_marginLeft="@dimen/px20dp"
                   android:background="@null"
                   android:hint="请输入编号道路运输证"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
           </LinearLayout>
           <include layout="@layout/common_line"></include>
       </LinearLayout>

   </ScrollView>


</LinearLayout>