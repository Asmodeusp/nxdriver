<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/bg">
    <View
        android:id="@+id/status_bar_view"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <android.support.v4.widget.NestedScrollView
        android:layout_marginBottom="@dimen/px20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/bg_17"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:background="@drawable/ico_mine_bg"
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <ImageView
                    android:id="@+id/imgKefu"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px40dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ico_kefu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>
                <ImageView
                    android:id="@+id/avatar_max"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />

                <com.saimawzc.freight.weight.CircleImageView
                    android:src="@drawable/ico_head_defalut"
                    android:layout_marginLeft="@dimen/px30dp"
                    android:layout_centerVertical="true"
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:id="@+id/avatar_min"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />

                <LinearLayout
                    android:layout_marginLeft="@dimen/px30dp"
                    android:layout_toRightOf="@+id/avatar_min"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:textColor="@color/white"
                        android:textSize="@dimen/px36dp"
                        android:id="@+id/tvName"
                        android:layout_marginTop="@dimen/px10dp"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="@color/white"
                        android:textSize="@dimen/px28dp"
                        android:id="@+id/tvcompamy"
                        android:layout_marginTop="@dimen/px10dp"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:visibility="gone"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="@dimen/px24dp"
                    android:layout_marginBottom="@dimen/px26dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/ico_mypj"
                        android:layout_width="@dimen/px48dp"
                        android:layout_height="@dimen/px48dp">
                    </ImageView>
                    <TextView
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/px26dp"
                        android:layout_marginTop="@dimen/px16dp"
                        android:text="我的评价"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/px24dp"
                    android:layout_marginBottom="@dimen/px26dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/ico_cys_mymessage"
                        android:layout_width="@dimen/px48dp"
                        android:layout_height="@dimen/px48dp">

                    </ImageView>
                    <TextView
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/px26dp"
                        android:layout_marginTop="@dimen/px16dp"
                        android:text="我的消息"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/px24dp"
                    android:layout_marginBottom="@dimen/px26dp"
                    android:id="@+id/mysettlement"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/ico_myjiesuan"
                        android:layout_width="@dimen/px48dp"
                        android:layout_height="@dimen/px48dp">

                    </ImageView>
                    <TextView
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/px26dp"
                        android:layout_marginTop="@dimen/px16dp"
                        android:text="我的结算"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/px24dp"
                    android:layout_marginBottom="@dimen/px26dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/ico_cys_infobao"
                        android:layout_width="@dimen/px48dp"
                        android:layout_height="@dimen/px48dp">

                    </ImageView>
                    <TextView
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/px26dp"
                        android:layout_marginTop="@dimen/px16dp"
                        android:text="信息宝"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view"
                android:background="@color/bg_17"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px20dp"></View>
            <RelativeLayout
                android:id="@+id/rl_useridentification"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp">

                <ImageView
                    android:id="@+id/rz"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ico_renzheng"
                    android:layout_width="@dimen/px40dp"
                    android:layout_height="@dimen/px40dp">

                </ImageView>
                <TextView
                    android:layout_toRightOf="@+id/rz"
                    android:layout_marginLeft="@dimen/px10dp"
                    android:textSize="@dimen/px30dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_black"
                    android:text="用户认证"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/px30dp"
                        android:id="@+id/tvidentificstatus"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:layout_marginRight="@dimen/px20dp"
                        android:src="@drawable/ico_right" />
                </LinearLayout>

            </RelativeLayout>
            <include layout="@layout/common_line"></include>

            <RelativeLayout
                android:id="@+id/rl_mycar"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/car"
                    android:layout_width="@dimen/px40dp"
                    android:layout_height="@dimen/px40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:src="@drawable/ico_cys_car">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:layout_toRightOf="@+id/car"
                    android:text="我的车辆"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/px30dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:layout_marginRight="@dimen/px20dp"
                        android:src="@drawable/ico_right" />
                </LinearLayout>
            </RelativeLayout>
            <include layout="@layout/common_line"></include>


            <RelativeLayout
                android:id="@+id/rl_myship"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ship"
                    android:layout_width="@dimen/px40dp"
                    android:layout_height="@dimen/px40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:src="@drawable/ico_ship">

                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:layout_toRightOf="@+id/ship"
                    android:text="我的船舶"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/px30dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:layout_marginRight="@dimen/px20dp"
                        android:src="@drawable/ico_right" />
                </LinearLayout>
            </RelativeLayout>
            <include layout="@layout/common_line"></include>
            <RelativeLayout
                android:id="@+id/id_mydriver"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp">
                <ImageView
                    android:id="@+id/siji"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ico_cys_sj"
                    android:layout_width="@dimen/px40dp"
                    android:layout_height="@dimen/px40dp">

                </ImageView>
                <TextView
                    android:layout_toRightOf="@+id/siji"
                    android:id="@+id/tvRole"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:textSize="@dimen/px30dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_black"
                    android:text="我的司机（船员）"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_marginRight="@dimen/px20dp"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:src="@drawable/ico_right"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </RelativeLayout>
            <include layout="@layout/common_line"></include>
            <RelativeLayout
                android:id="@+id/mylessess"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp">
                <ImageView
                    android:id="@+id/czr"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ico_cys_czr"
                    android:layout_width="@dimen/px40dp"
                    android:layout_height="@dimen/px40dp">

                </ImageView>
                <TextView
                    android:layout_toRightOf="@+id/czr"
                    android:scrollbarSize="@dimen/px30dp"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:textSize="@dimen/px30dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_black"
                    android:text="我的承租人"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tvunPassLessess"
                        android:textSize="@dimen/px24dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/dot_selected_red"
                        android:text=""
                        android:layout_width="9dp"
                        android:layout_height="9dp" />
                    <ImageView
                        android:layout_marginRight="@dimen/px20dp"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:src="@drawable/ico_right"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </RelativeLayout>
            <include layout="@layout/common_line"></include>
            <RelativeLayout
                android:visibility="visible"
                android:id="@+id/rlwallet"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp">
                <ImageView
                    android:id="@+id/qb"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ico_cys_qb"
                    android:layout_width="@dimen/px40dp"
                    android:layout_height="@dimen/px40dp">

                </ImageView>
                <TextView
                    android:layout_toRightOf="@+id/qb"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:textSize="@dimen/px30dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_black"
                    android:text="我的钱包"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_marginRight="@dimen/px20dp"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:src="@drawable/ico_right"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </RelativeLayout>
            <include layout="@layout/common_line"></include>
            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rlpublish"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp">
                <ImageView
                    android:id="@+id/qb1"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ico_mypublish"
                    android:layout_width="@dimen/px40dp"
                    android:layout_height="@dimen/px40dp">

                </ImageView>
                <TextView
                    android:layout_toRightOf="@+id/qb1"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:textSize="@dimen/px30dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_black"
                    android:text="我的发布方"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_marginRight="@dimen/px20dp"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:src="@drawable/ico_right"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </RelativeLayout>
            <include layout="@layout/common_line"></include>


            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rlcarmanage"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp">
                <ImageView
                    android:id="@+id/crrmanage"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ico_carmanage"
                    android:layout_width="@dimen/px40dp"
                    android:layout_height="@dimen/px40dp">

                </ImageView>
                <TextView
                    android:layout_toRightOf="@+id/crrmanage"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:textSize="@dimen/px30dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_black"
                    android:text="车队长管理"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_marginRight="@dimen/px20dp"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:src="@drawable/ico_right"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </RelativeLayout>
            <include layout="@layout/common_line"></include>
            <RelativeLayout

                android:id="@+id/changerole"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp">
                <ImageView
                    android:id="@+id/qhje"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ico_change_role"
                    android:layout_width="@dimen/px40dp"
                    android:layout_height="@dimen/px40dp">

                </ImageView>
                <TextView
                    android:layout_toRightOf="@+id/qhje"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:textSize="@dimen/px30dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_black"
                    android:text="切换角色"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_marginRight="@dimen/px20dp"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:src="@drawable/ico_right"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </RelativeLayout>
            <include layout="@layout/common_line"></include>
            <RelativeLayout
                android:id="@+id/rlset"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp">
                <ImageView
                    android:id="@+id/set"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ico_set"
                    android:layout_width="@dimen/px40dp"
                    android:layout_height="@dimen/px40dp">

                </ImageView>
                <TextView
                    android:layout_toRightOf="@+id/set"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:textSize="@dimen/px30dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_black"
                    android:text="系统设置"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvverson"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_marginRight="@dimen/px20dp"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:src="@drawable/ico_right"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_LogOut"
                android:layout_marginBottom="@dimen/px20dp"
                android:layout_marginTop="@dimen/px20dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp">
                <TextView
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/px30dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/theme_color"
                    android:text="退出登录"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>






</RelativeLayout>