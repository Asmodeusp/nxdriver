<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">
    <include
        android:id="@+id/cl"
        layout="@layout/common_toolbar">
    </include>
    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/px24dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/color_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="派车单号："
                    android:textSize="@dimen/px30dp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/tvSendId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:text=""
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/px30dp"
                    android:textStyle="bold">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/px24dp"
                android:layout_marginTop="@dimen/px28dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ico_startadress"
                    android:layout_width="@dimen/px40dp"
                    android:layout_height="@dimen/px40dp">

                </ImageView>

                <TextView
                    android:layout_marginRight="@dimen/px10dp"
                    android:textColor="@color/gray666"
                    android:id="@+id/tvStratAdress"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/px26dp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginLeft="@dimen/px24dp"
                android:layout_marginTop="@dimen/px20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/px40dp"
                    android:layout_height="@dimen/px40dp"
                    android:src="@drawable/ico_enadress">

                </ImageView>

                <TextView
                    android:layout_marginRight="@dimen/px10dp"
                    android:textColor="@color/gray666"
                    android:id="@+id/tvEndAdress"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/px26dp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>



            </LinearLayout>
            <View
                android:background="@color/bg"
                android:layout_width="match_parent"
                android:layout_height="10dp"></View>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/px24dp"
                    android:orientation="horizontal">
                    <TextView
                        android:textColor="@color/color_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="料仓编号："
                        android:textSize="@dimen/px30dp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/tvLCId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:text=""
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/px30dp"
                        android:textStyle="bold">

                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="@dimen/px10dp"
                    android:layout_marginLeft="@dimen/px24dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="@dimen/px40dp"
                        android:layout_height="@dimen/px40dp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:text="卸"
                        android:background="@drawable/text_shap_orange">

                    </TextView>
                    <TextView
                        android:layout_marginRight="@dimen/px10dp"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:textStyle="bold"
                        android:textSize="@dimen/px26dp"
                        android:text="料位："
                        android:textColor="@color/color_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_marginRight="@dimen/px10dp"
                        android:id="@+id/tvLWText"
                        android:textColor="@color/gray666"
                        android:textStyle="bold"
                        android:textSize="@dimen/px26dp"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>



                </LinearLayout>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:background="@color/bg"
                android:padding="@dimen/px20dp"
                android:id="@+id/cv_natival"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
            <RelativeLayout
                android:id="@+id/resTxt2Relative"
                android:paddingRight="@dimen/px24dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px100dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/px24dp"
                    android:text="矿点信息："
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/px28dp" />
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/gray666"
                        android:textSize="@dimen/px28dp"
                        android:id="@+id/resTxt2Text"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
            <include layout="@layout/common_line"></include>

            <include layout="@layout/small_order">

            </include>
        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

    <com.saimawzc.freight.weight.utils.DragTV
        android:visibility="gone"
        android:id="@+id/tvStartTask"
        android:textSize="@dimen/px24dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/dot_selected"
        android:text="开启任务"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="开始任务"
        android:layout_marginRight="@dimen/px40dp"
        android:layout_marginBottom="@dimen/px20dp"
        android:layout_gravity="right"
        android:layout_width="55dp"
        android:layout_height="55dp">

    </com.saimawzc.freight.weight.utils.DragTV>

</RelativeLayout>