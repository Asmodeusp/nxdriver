<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/bg"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/common_toolbar"></include>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="96dp">
        <TextView
            android:layout_marginLeft="@dimen/px50dp"
            android:textColor="@color/color_black"
            android:textSize="@dimen/px30dp"
            android:text="到账银行卡"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/px40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <ImageView
                android:src="@drawable/ico_yinhang"
                android:layout_width="20dp"
                android:layout_height="20dp">

            </ImageView>
            <TextView
                android:id="@+id/tvBankName"
                android:layout_marginLeft="@dimen/px10dp"
                android:textColor="@color/color_black"
                android:textSize="@dimen/px28dp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/shape_list_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_margin="@dimen/px50dp"
            android:text="提现金额"
            android:textSize="@dimen/px24dp"
            android:textColor="@color/color_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <LinearLayout
            android:layout_marginBottom="@dimen/px20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/px30dp"
                android:layout_marginLeft="@dimen/px50dp"
                android:textColor="@color/color_black"
                android:textStyle="bold"
                android:text="￥"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <EditText
                android:id="@+id/edwithdrawnum"
                android:layout_marginLeft="@dimen/px30dp"
                android:background="@null"
                android:textSize="@dimen/px28dp"
                android:textColor="@color/color_black"
                android:text=""
                android:hint="输入提现金额"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>
        </LinearLayout>
        <include layout="@layout/common_line"></include>
        <LinearLayout
            android:layout_marginTop="@dimen/px20dp"
            android:layout_marginLeft="@dimen/px50dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvyue"
                android:text="当前可提现余额XX元，"
                android:textColor="@color/gray999"
                android:textSize="@dimen/px24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/withdrawall"
                android:textColor="@color/blue"
                android:textSize="@dimen/px30dp"
                android:text="全部提现"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>
        <TextView
            android:id="@+id/btnwithdraw"
            android:gravity="center"
            android:text="提现"
            android:textSize="@dimen/px30dp"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/px50dp"
            android:layout_marginRight="@dimen/px50dp"
            android:layout_marginTop="@dimen/px100dp"
            android:background="@drawable/shape_list_btn_blue"
            android:layout_width="match_parent"
            android:layout_height="40dp">

        </TextView>
    </LinearLayout>


</LinearLayout>