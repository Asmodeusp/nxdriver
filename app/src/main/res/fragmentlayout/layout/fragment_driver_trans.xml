<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.baidu.mapapi.map.MapView>



    <com.yinglan.scrolllayout.ScrollLayout
        android:background="@color/transparent"
        android:id="@+id/yingScrollyay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.saimawzc.freight.weight.utils.ContentRecyclerView
            android:layout_marginTop="270dp"
            android:background="@color/white"
            android:id="@+id/trantCy"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.saimawzc.freight.weight.utils.ContentRecyclerView>


        <RelativeLayout
            android:id="@+id/rlTop"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="270dp">

            <android.support.v4.view.ViewPager
                android:background="@color/white"
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v4.view.ViewPager>
            <!--自定义Indicator-->
            <LinearLayout
                android:visibility="visible"
                android:layout_alignParentBottom="true"
                android:id="@+id/ll_dot"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="horizontal">
            </LinearLayout>

        </RelativeLayout>

    </com.yinglan.scrolllayout.ScrollLayout>


    <LinearLayout
        android:id="@+id/back"
        android:layout_width="@dimen/px200dp"
        android:layout_height="@dimen/px100dp">
        <ImageView
            android:layout_marginLeft="@dimen/px40dp"
            android:layout_marginTop="@dimen/px60dp"
            android:src="@drawable/ico_menu_return"
            android:layout_width="@dimen/px32dp"
            android:layout_height="@dimen/px32dp">
        </ImageView>
    </LinearLayout>

    <Button
        android:id="@+id/satrt_navation"
        android:layout_marginRight="@dimen/px20dp"
        android:paddingRight="@dimen/px20dp"
        android:paddingLeft="@dimen/px20dp"
        android:text="开始导航"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/px40dp"
        android:layout_marginTop="@dimen/px60dp"
        android:background="@drawable/shape_bidd_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px50dp">
    </Button>

</RelativeLayout>