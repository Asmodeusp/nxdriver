<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/common_toolbar"></include>
    <ScrollView
        android:scrollbars="none"
        android:layout_marginLeft="@dimen/px40dp"
        android:layout_marginRight="@dimen/px40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/px36dp"
                android:textColor="@color/color_black"
                android:textStyle="bold"
                android:textSize="@dimen/px32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="填写个人信息" />
            <TextView
                android:textColor="@color/gray666"
                android:text="车辆所有人实际所有人为车主"
                android:textSize="@dimen/px24dp"
                android:layout_marginTop="@dimen/px14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:textColor="@color/gray666"
                android:text="(即个人，填写个人姓名，应与服务方姓名，收款人姓名一致）"
                android:textSize="@dimen/px24dp"
                android:layout_marginTop="@dimen/px14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="@dimen/px20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/chooseidpositive"
                    android:layout_marginRight="@dimen/px20dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/imgidpositive"
                        android:layout_margin="@dimen/px10dp"
                        android:src="@drawable/ico_default_idcard_front"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px200dp" />
                    <TextView
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/px26dp"
                        android:layout_marginTop="@dimen/px10dp"
                        android:text="身份证正面"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/chooseidotherside"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/imgidotherside"
                            android:layout_margin="@dimen/px10dp"
                            android:src="@drawable/ico_defalut_idcard_back"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/px200dp" />

                        <TextView
                            android:textColor="@color/gray333"
                            android:textSize="@dimen/px26dp"
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/px10dp"
                            android:text="身份证反面" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginTop="@dimen/px20dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp">
                <TextView
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/px28dp"
                    android:text="姓名:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_marginRight="@dimen/px30dp"
                    android:gravity="left"
                    android:textColor="@color/gray666"
                    android:id="@+id/eduser"
                    android:textSize="@dimen/px28dp"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:background="@null"
                    android:hint="上传照片自动填入"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <include layout="@layout/common_line"></include>

            <LinearLayout
                android:gravity="center"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginTop="@dimen/px20dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp">
                <TextView
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/px28dp"
                    android:text="身份证:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_marginRight="@dimen/px30dp"
                    android:gravity="left"
                    android:textColor="@color/gray666"
                    android:id="@+id/edIdcard"
                    android:textSize="@dimen/px28dp"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:background="@null"
                    android:hint="上传照片自动填入"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <include layout="@layout/common_line"></include>
            <LinearLayout
                android:gravity="center"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginTop="@dimen/px20dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp">
                <TextView
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/px28dp"
                    android:text="开户行:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_marginRight="@dimen/px30dp"
                    android:gravity="left"
                    android:textColor="@color/gray666"
                    android:id="@+id/edBankName"
                    android:textSize="@dimen/px28dp"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:background="@null"
                    android:hint="输入开户行"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <include layout="@layout/common_line"></include>
            <LinearLayout
                android:gravity="center"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginTop="@dimen/px20dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp">
                <TextView
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/px28dp"
                    android:text="银行卡:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:inputType="number"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/px30dp"
                    android:gravity="left"
                    android:textColor="@color/gray666"
                    android:id="@+id/edBankNo"
                    android:textSize="@dimen/px28dp"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:background="@null"
                    android:hint="输入银行卡"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/bankscan"
                    android:layout_marginRight="@dimen/px32dp"
                    android:src="@drawable/ico_scan"
                    android:layout_width="@dimen/px48dp"
                    android:layout_height="@dimen/px48dp">

                </ImageView>
            </LinearLayout>
            <include layout="@layout/common_line"></include>
            <LinearLayout
                android:gravity="center"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginTop="@dimen/px20dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp">
                <TextView
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/px28dp"
                    android:text="手机号:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:maxLength="11"
                    android:inputType="number"
                    android:layout_marginRight="@dimen/px30dp"
                    android:gravity="left"
                    android:textColor="@color/gray666"
                    android:id="@+id/edphone"
                    android:textSize="@dimen/px28dp"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:background="@null"
                    android:hint="输入银行预留手机号"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <include layout="@layout/common_line"></include>
            <View
                android:background="@color/bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px10dp">

            </View>
            <TextView
                android:layout_marginTop="@dimen/px20dp"
                android:textColor="@color/color_black"
                android:textStyle="bold"
                android:textSize="@dimen/px32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="填写车辆信息" />

            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="@dimen/px18dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:background="@drawable/ico_carband_blue"
                        android:layout_width="150dp"
                        android:layout_height="40dp">

                    </ImageView>

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="22dp"
                        android:background="@drawable/ico_carband_yellow">

                    </ImageView>
                </LinearLayout>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="@dimen/px10dp"
                        android:gravity="center"
                        android:button="@drawable/bg_radiobutton"
                        android:checked="true"
                        android:id="@+id/groupblue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <RadioButton
                        android:layout_marginLeft="152dp"
                        android:layout_gravity="center"
                        android:button="@drawable/bg_radiobutton"
                        android:checked="false"
                        android:id="@+id/groupyellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />


                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginTop="@dimen/px20dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp">
                <TextView
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/px28dp"
                    android:text="车主姓名:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_marginRight="@dimen/px30dp"
                    android:gravity="left"
                    android:textColor="@color/gray666"
                    android:id="@+id/edcarusername"
                    android:textSize="@dimen/px28dp"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:background="@null"
                    android:hint="输入车主姓名"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <include layout="@layout/common_line"></include>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/px80dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_marginTop="@dimen/px20dp"
                android:layout_marginBottom="@dimen/px10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实际所有人:"
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/px28dp" />
                <EditText
                    android:textSize="@dimen/px28dp"
                    android:textColor="@color/gray666"
                    android:gravity="left"
                    android:id="@+id/edreal_user"
                    android:background="@null"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:layout_marginRight="@dimen/px30dp"
                    android:hint="输入实际所有人" />
            </LinearLayout>
            <include layout="@layout/common_line" />
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/px80dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_marginTop="@dimen/px20dp"
                android:layout_marginBottom="@dimen/px10dp">
                <TextView
                    android:textSize="@dimen/px28dp"
                    android:textColor="@color/gray333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所有人联系方式:" />
                <EditText
                    android:maxLength="11"
                    android:inputType="number"
                    android:textSize="@dimen/px28dp"
                    android:textColor="@color/gray666"
                    android:gravity="left"
                    android:id="@+id/edreal_user_phone"
                    android:background="@null"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:layout_marginRight="@dimen/px30dp"
                    android:hint="输入实际所有人联系方式" />
            </LinearLayout>
            <include layout="@layout/common_line" />
            <LinearLayout
                android:gravity="center"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginTop="@dimen/px20dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp">
                <TextView
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/px28dp"
                    android:text="车   牌  号:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:layout_marginRight="@dimen/px30dp"
                    android:gravity="left"
                    android:textColor="@color/gray666"
                    android:id="@+id/edcarNo"
                    android:textSize="@dimen/px28dp"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:background="@null"
                    android:hint="输入车牌号"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <include layout="@layout/common_line"></include>
            <RelativeLayout
                android:paddingRight="@dimen/px20dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_marginTop="@dimen/px20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llchoosecx"
                    android:layout_marginRight="@dimen/px20dp"
                    android:layout_toLeftOf="@+id/ico"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/px28dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="承运车型:"/>
                    <EditText
                        android:id="@+id/carmodel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:background="@null"
                        android:gravity="left"
                        android:hint="请选择"
                        android:textSize="@dimen/px30dp" />


                </LinearLayout>
                <ImageView
                    android:id="@+id/ico"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ico_right"
                    android:layout_width="@dimen/px30dp"
                    android:layout_height="@dimen/px30dp" />

            </RelativeLayout>
            <include layout="@layout/common_line"></include>
            <RelativeLayout
                android:paddingRight="@dimen/px20dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_marginTop="@dimen/px20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llcarbrnd"
                    android:layout_marginRight="@dimen/px20dp"
                    android:layout_toLeftOf="@+id/ico1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/px28dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车辆品牌:"/>
                    <EditText
                        android:id="@+id/tvcarbran"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:background="@null"
                        android:gravity="left"
                        android:hint="请选择"
                        android:textSize="@dimen/px30dp" />


                </LinearLayout>
                <ImageView
                    android:id="@+id/ico1"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ico_right"
                    android:layout_width="@dimen/px30dp"
                    android:layout_height="@dimen/px30dp" />

            </RelativeLayout>
            <include layout="@layout/common_line"></include>

            <RelativeLayout
                android:paddingRight="@dimen/px20dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_marginTop="@dimen/px20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_marginRight="@dimen/px20dp"
                    android:layout_toLeftOf="@+id/ico2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/px28dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="车辆归属地:"/>
                    <TextView
                        android:id="@+id/tvcaradress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:background="@null"
                        android:gravity="left"
                        android:hint="请选择"
                        android:textSize="@dimen/px30dp" />


                </LinearLayout>
                <ImageView
                    android:id="@+id/ico2"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ico_right"
                    android:layout_width="@dimen/px30dp"
                    android:layout_height="@dimen/px30dp" />

            </RelativeLayout>
            <include layout="@layout/common_line"></include>
            <LinearLayout
                android:gravity="center"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginTop="@dimen/px20dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp">
                <TextView
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/px28dp"
                    android:text="承运车长:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:layout_marginRight="@dimen/px30dp"
                        android:gravity="center"
                        android:textColor="@color/gray666"
                        android:id="@+id/edcarLength"
                        android:textSize="@dimen/px28dp"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:background="@null"
                        android:hint="车长"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="*"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:layout_marginRight="@dimen/px30dp"
                        android:gravity="center"
                        android:textColor="@color/gray666"
                        android:id="@+id/edcarWith"
                        android:textSize="@dimen/px28dp"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:background="@null"
                        android:hint="车宽"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="*"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_weight="1"
                        android:inputType="numberDecimal"
                        android:layout_marginRight="@dimen/px30dp"
                        android:gravity="center"
                        android:textColor="@color/gray666"
                        android:id="@+id/edcarHight"
                        android:textSize="@dimen/px28dp"
                        android:layout_marginLeft="@dimen/px20dp"
                        android:background="@null"
                        android:hint="车高"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>
            </LinearLayout>
            <include layout="@layout/common_line"></include>
            <LinearLayout
                android:gravity="center"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginTop="@dimen/px20dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp">
                <TextView
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/px28dp"
                    android:text="承运载重:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:inputType="numberDecimal"
                    android:layout_marginRight="@dimen/px30dp"
                    android:gravity="left"
                    android:textColor="@color/gray666"
                    android:id="@+id/edcarWeight"
                    android:textSize="@dimen/px28dp"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:background="@null"
                    android:hint="输入车载重量"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <include layout="@layout/common_line"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px80dp"
                android:layout_marginBottom="@dimen/px10dp"
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_marginTop="@dimen/px20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否挂靠:"
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/px28dp" />

                <RadioGroup
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/group"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RadioButton
                        android:paddingLeft="@dimen/px20dp"
                        android:button="@drawable/bg_radiobutton"
                        android:checked="false"
                        android:id="@+id/groupyes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="是" />

                    <RadioButton
                        android:checked="true"
                        android:paddingLeft="@dimen/px20dp"
                        android:drawablePadding="@dimen/px20dp"
