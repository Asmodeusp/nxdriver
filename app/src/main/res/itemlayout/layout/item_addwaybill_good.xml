<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_goodsname"
        android:layout_marginTop="@dimen/px2dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="货物名称"
            android:textColor="@color/color_black"
            android:textSize="@dimen/px30dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvGoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text=""
                android:textColor="@color/gray888"
                android:textSize="@dimen/px30dp" />

            <ImageView
                android:id="@+id/imgRight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px20dp"
                android:layout_marginRight="@dimen/px20dp"
                android:src="@drawable/ico_right" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/px2dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:textSize="@dimen/px30dp"
            android:textColor="@color/color_black"
            android:text="货物吨数"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:enabled="false"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:textColor="@color/gray888"
                android:textSize="@dimen/px30dp"
                android:hint="请输入"
                android:id="@+id/edTrantNum"
                android:background="@null"
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:gravity="center"
                android:id="@+id/rl_chooseUtil"
                android:layout_marginRight="@dimen/px20dp"
                android:paddingLeft="@dimen/px20dp"
                android:background="@drawable/shape_order_btn"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvWeightUtil"
                    android:text="吨"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:id="@+id/imgdown"
                    android:layout_marginRight="@dimen/px20dp"
                    android:layout_marginLeft="@dimen/px20dp"
                    android:src="@drawable/ico_down"
                    android:layout_width="12dp"
                    android:layout_height="8dp" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/llprice"
        android:layout_marginTop="@dimen/px2dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="运输单价"
            android:textColor="@color/color_black"
            android:textSize="@dimen/px30dp" />
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:enabled="false"
                android:paddingRight="@dimen/px20dp"
                android:layout_marginRight="@dimen/px20dp"
                android:textColor="@color/gray888"
                android:textSize="@dimen/px30dp"
                android:id="@+id/edprice"
                android:inputType="numberDecimal"
                android:background="@null"
                android:text=""
                android:hint="请输入"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>
    <include layout="@layout/common_line"></include>
    <RelativeLayout
        android:id="@+id/rlgoodprice"
        android:layout_marginTop="@dimen/px2dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="货物单价"
            android:textColor="@color/color_black"
            android:textSize="@dimen/px30dp" />
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:enabled="false"
                android:paddingRight="@dimen/px20dp"
                android:layout_marginRight="@dimen/px20dp"
                android:textColor="@color/gray888"
                android:textSize="@dimen/px30dp"
                android:id="@+id/edgoodprice"
                android:inputType="numberDecimal"
                android:background="@null"
                android:text=""
                android:hint="请输入"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>
    <include layout="@layout/common_line"></include>
</LinearLayout>