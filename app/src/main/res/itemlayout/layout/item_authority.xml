<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center_vertical"
            android:id="@+id/tvauthorityName"
            android:layout_margin="@dimen/px10dp"
            android:text=""
            android:textSize="@dimen/px30dp"
            android:textColor="@color/color_black"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px80dp">
        </TextView>

        <ImageView
            android:visibility="invisible"
            android:id="@+id/imgchoose"
            android:src="@drawable/ico_choose"
            android:layout_marginRight="@dimen/px20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/px50dp"
            android:layout_height="@dimen/px50dp">

        </ImageView>
    </RelativeLayout>
    <include layout="@layout/common_line"></include>







</LinearLayout>