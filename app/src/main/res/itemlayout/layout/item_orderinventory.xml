<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:gravity="center_vertical"
        android:textColor="@color/gray888"
       android:paddingLeft="@dimen/px24dp"
        android:text=""
        android:id="@+id/tvId"
        android:background="@color/bg_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px96dp">

    </TextView>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px96dp">

        <TextView
            android:textColor="@color/color_black"
            android:textSize="@dimen/px28dp"
            android:layout_centerVertical="true"
            android:text="货物名称："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/tvName"
            android:gravity="center"
            android:textColor="@color/gray666"
            android:textSize="@dimen/px26dp"
            android:layout_marginRight="@dimen/px24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </TextView>

    </RelativeLayout>
   <include layout="@layout/common_line"></include>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px96dp">

        <TextView
            android:textColor="@color/color_black"
            android:textSize="@dimen/px28dp"
            android:layout_centerVertical="true"
            android:text="重量："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/tvWeight"
            android:gravity="center"
            android:textColor="@color/gray666"
            android:textSize="@dimen/px26dp"
            android:layout_marginRight="@dimen/px24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </TextView>

    </RelativeLayout>


</LinearLayout>