<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px100dp">

        <TextView
            android:id="@+id/tvManageId"
            android:textColor="@color/color_black"
            android:textSize="@dimen/px30dp"
            android:layout_centerVertical="true"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/px20dp"
        android:background="@color/divider_e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2dp">

    </View>

    <RelativeLayout
        android:layout_margin="@dimen/px20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px30dp"
            android:layout_toRightOf="@+id/image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_black"
                android:textSize="@dimen/px30dp"></TextView>

            <TextView
                android:id="@+id/tvCarModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_black"
                android:textSize="@dimen/px30dp"></TextView>
            <TextView
                android:id="@+id/tvWeight"
                android:layout_marginTop="@dimen/px20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_black"
                android:textSize="@dimen/px30dp"></TextView>



        </LinearLayout>
        <View
            android:id="@+id/view"
            android:layout_marginTop="@dimen/px20dp"
            android:layout_below="@+id/rl"
            android:background="@color/drivel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px2dp"></View>

        <LinearLayout
            android:layout_marginTop="@dimen/px20dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_below="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:visibility="gone"
                android:id="@+id/viewZp"
                android:layout_marginLeft="@dimen/px20dp"
                android:padding="@dimen/px20dp"
                android:background="@drawable/shape_order_btn"
                android:text="指派"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/viewJj"
                android:layout_marginLeft="@dimen/px20dp"
                android:padding="@dimen/px20dp"
                android:background="@drawable/shape_order_btn"
                android:text="竞价"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:visibility="gone"
                android:id="@+id/viewJjDelation"
                android:layout_marginLeft="@dimen/px20dp"
                android:padding="@dimen/px20dp"
                android:background="@drawable/shape_order_btn"
                android:text="竞价详情"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>


    </RelativeLayout>
    <View
        android:background="@color/divider_e5e5e5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px20dp"></View>



</LinearLayout>