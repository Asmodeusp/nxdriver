<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="@dimen/px24dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px24dp"
            android:text=""
            android:textColor="@color/color_black"
            android:textSize="@dimen/px28dp"
            android:textStyle="normal"></TextView>

        <ImageView
            android:id="@+id/imgClear"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px30dp"
            android:src="@drawable/ico_delete"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/px28dp"
            android:layout_height="@dimen/px28dp">

        </ImageView>

    </RelativeLayout>
    <TextView
        android:layout_marginTop="@dimen/px10dp"
        android:layout_marginLeft="@dimen/px24dp"
        android:id="@+id/tvNum"
        android:textStyle="normal"
        android:textColor="@color/gray666"
        android:textSize="@dimen/px28dp"
        android:layout_centerVertical="true"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <include layout="@layout/common_line"></include>
</LinearLayout>