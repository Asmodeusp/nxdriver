<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shape_list_btn_no_bord"
    android:layout_marginLeft="@dimen/px24dp"
    android:layout_marginRight="@dimen/px24dp"
    android:layout_marginBottom="@dimen/px20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_toLeftOf="@+id/tvId"
            android:layout_marginLeft="@dimen/px30dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|left"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/px16dp"
                android:text=""
                android:textColor="@color/color_black"
                android:textSize="@dimen/px36dp">

            </TextView>
        </LinearLayout>


        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/tvId"
            android:textColor="@color/gray666"
            android:textSize="@dimen/px26dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:visibility="visible">

        </TextView>

    </RelativeLayout>
    <include layout="@layout/common_line"></include>
    <RelativeLayout
        android:layout_margin="@dimen/px20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px30dp"
            android:layout_toRightOf="@+id/image"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="@dimen/px20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发货地址："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/px28dp">

                </TextView>

                <TextView
                    android:layout_marginLeft="@dimen/px20dp"
                    android:id="@+id/tvsendadress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/gray999"
                    android:textSize="@dimen/px28dp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/px20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收货地址："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/px28dp">

                </TextView>

                <TextView
                    android:layout_marginLeft="@dimen/px20dp"
                    android:id="@+id/tvreceiveadress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/gray999"
                    android:textSize="@dimen/px28dp"></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/px20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货物信息："
                    android:textColor="@color/gray333"
                    android:textSize="@dimen/px28dp">

                </TextView>

                <TextView
                    android:layout_marginLeft="@dimen/px20dp"
                    android:id="@+id/tvgoodInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/gray999"
                    android:textSize="@dimen/px28dp"></TextView>
            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="@dimen/px20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="运单总量："
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/px28dp">

                    </TextView>

                    <TextView
                        android:layout_marginLeft="@dimen/px20dp"
                        android:id="@+id/tvallnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/gray999"
                        android:textSize="@dimen/px28dp"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="@dimen/px20dp"
                    android:layout_marginTop="@dimen/px20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/签收量："
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/px28dp">

                    </TextView>

                    <TextView
                        android:layout_marginLeft="@dimen/px20dp"
                        android:id="@+id/signnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/gray999"
                        android:textSize="@dimen/px28dp"></TextView>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="@dimen/px20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="待计算量："
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/px28dp">

                    </TextView>

                    <TextView
                        android:layout_marginLeft="@dimen/px20dp"
                        android:id="@+id/waitnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/gray999"
                        android:textSize="@dimen/px28dp"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="@dimen/px20dp"
                    android:layout_marginTop="@dimen/px20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/待结算金额："
                        android:textColor="@color/gray333"
                        android:textSize="@dimen/px28dp">

                    </TextView>

                    <TextView
                        android:layout_marginLeft="@dimen/px20dp"
                        android:id="@+id/waitmoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/gray999"
                        android:textSize="@dimen/px28dp"></TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>