<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.saimawzc.freight.weight.CircleImageView
            android:id="@+id/imgView"
            android:layout_margin="@dimen/px40dp"
            android:src="@drawable/ico_app"
            android:layout_width="@dimen/px120dp"
            android:layout_height="@dimen/px120dp" />

        <LinearLayout
            android:layout_marginTop="@dimen/px20dp"
            android:layout_toRightOf="@+id/imgView"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/gray333"
                    android:id="@+id/tvname"
                    android:textSize="@dimen/px28dp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/px10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/gray888"
                    android:id="@+id/tvphone"
                    android:textSize="@dimen/px28dp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="@dimen/px30dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ico_add"
                android:layout_width="@dimen/px24dp"
                android:layout_height="@dimen/px32dp">
            </ImageView>
            <TextView
                android:layout_marginLeft="@dimen/px20dp"
                android:textColor="@color/blue"
                android:id="@+id/tvadd"
                android:layout_marginRight="@dimen/px20dp"
                android:layout_gravity="right|center_vertical"
                android:gravity="center"
                android:text="添加司机（船员）"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px60dp" />
        </LinearLayout>

    </RelativeLayout>
   <include layout="@layout/common_line"></include>

</LinearLayout>