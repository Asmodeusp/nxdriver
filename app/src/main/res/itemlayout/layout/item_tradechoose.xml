<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/bg"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginBottom="@dimen/px8dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="94dp">
        <LinearLayout
            android:layout_marginTop="@dimen/px22dp"
            android:layout_marginLeft="@dimen/px28dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tvData"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/px32dp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tvWeek"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/px32dp"
                    android:layout_marginLeft="@dimen/px22dp"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>

            <TextView
                android:id="@+id/tvusertype"
                android:layout_marginTop="@dimen/px10dp"
                android:textColor="@color/color_black"
                android:textSize="@dimen/px28dp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/tvUseWay"
                android:textSize="@dimen/px28dp"
                android:textColor="@color/gray888"
                android:layout_marginTop="@dimen/px10dp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginRight="@dimen/px30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/trademoney"
                android:textSize="@dimen/px28dp"
                android:textColor="@color/green"
                android:text="+1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:visibility="gone"
                android:id="@+id/tvallmoney"
                android:textColor="@color/color_black"
                android:textSize="@dimen/px28dp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>

    </RelativeLayout>



</LinearLayout>